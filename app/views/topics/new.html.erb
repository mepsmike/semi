<%= form_for @topic do |f|%>

<div class="form-group">
	<%= f.label :title, "標題" %>
	<%=f.text_field :title ,:class => "form-control"%>
</div>

<div class="form-group">
	分類：
	<%= f.select :category_id,[["快報資訊","1"],["求物資","2"],["求救","3"]] %>
</div>

<div class="form-group">
	<%= f.label :content, "內容" %>
	<%= f.text_area :content ,:class => "form-control",:rows=>8%>
</div>

<%= f.submit "送出" ,:class =>"btn btn-success"%>
<% end %>